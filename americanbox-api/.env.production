# Variables de entorno para producción
# COMPLETAR CON TUS DATOS DE HOSTINGER

# Base de datos Hostinger
DB_HOST=localhost
DB_USER=tu_usuario_db_hostinger
DB_PASSWORD=tu_contraseña_db_hostinger
DB_NAME=americanbox_prod
DB_PORT=3306

# Configuración de aplicación
NODE_ENV=production
PORT=4000

# Sesiones - CAMBIAR por una clave secreta segura
SESSION_SECRET=AmericanBox_SecretKey_2024_ProduccionSegura_256bits

# URLs de producción - CAMBIAR por tu dominio real
