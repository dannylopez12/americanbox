{
  "version": 2,
  "name": "americanbox",
  "builds": [
    {
      "src": "americanbox-react/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "americanbox-api/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/americanbox-api/server.js"
    },
    {
      "src": "/(.*\\.(js|css|png|jpg|jpeg|gif|ico|svg))",
      "dest": "/americanbox-react/dist/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/americanbox-react/dist/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}